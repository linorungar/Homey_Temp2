<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">,

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HOMEY"
            android:id="@+id/my_label"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="ASYNC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/asyncOperationButton"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/my_label"
            android:onClick="onAsyncButtonClick"
            app:layout_constraintVertical_bias="0.852"
            android:layout_marginEnd="304dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="304dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" tools:text="ASYNC"/>
    <Button
            android:text="UI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/uiButton"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:onClick="onUiButtonClick"
            app:layout_constraintVertical_bias="0.935" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/macButton" android:layout_marginRight="8dp"
            app:layout_constraintStart_toEndOf="@+id/asyncOperationButton" android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp" tools:text="UI"/>
    <Button
            android:text="SHOW MAC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/macButton"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:onClick="onMacButtonClick"
            app:layout_constraintVertical_bias="0.935" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintHorizontal_bias="0.899" tools:text="SHOW MAC"/>

</androidx.constraintlayout.widget.ConstraintLayout>